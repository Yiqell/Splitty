<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="498.0" prefWidth="381.0" style="-fx-background-color: dff8ff;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.StartScreenCtrl">
   <children>
      <VBox prefHeight="624.0" prefWidth="360.0" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <Text fx:id="startScreenText" fill="DIMGRAY" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: #530071;" text="Splitty">
               <font>
                  <Font name="Monotype Corsiva" size="40.0" />
               </font>
            </Text>
            <HBox spacing="10.0">
               <children>
                  <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Text fx:id="createEventText" strokeType="OUTSIDE" strokeWidth="0.0" text="Create New Event">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Text>
                        <TextField fx:id="eventName" promptText="e.g. Holiday">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        <Button fx:id="createButton" mnemonicParsing="false" onAction="#createEvent" text="Create">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
                  <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Text fx:id="joinEventText" strokeType="OUTSIDE" strokeWidth="0.0" text="Join Event">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Text>
                        <TextField fx:id="inviteCode" promptText="Invite code">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        <Button fx:id="joinButton" mnemonicParsing="false" onAction="#joinEvent" text="Join">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Text fx:id="recentEventsText" strokeType="OUTSIDE" strokeWidth="0.0" text="Recently viewed events:">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
            <ListView fx:id="list" onTouchReleased="#showEvent" style="-fx-background-color: d5f6ff;" VBox.vgrow="ALWAYS" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </VBox>
   </children>
</AnchorPane>
